{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-react-hooks",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "interface-name": false,
    "no-console": {
      "severity": "warning"
    }
  },
  "linterOptions": {
    "exclude": ["**/*.js"]
  }
}
